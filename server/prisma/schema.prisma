generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  CPF       String   @unique
  email     String   @unique
  senha     String
  Padm      Boolean
  
  aluguel   aluguel[]
  IDUsuario nota[]
}

model aluguel {
  id        Int      @id @default(autoincrement())
  data      DateTime @default(now())
  idUsuario Int      @unique
  UsuarioID usuario  @relation(fields: [idUsuario], references: [id])
  IDAluguel nota[]
}

model produtos {
  id         Int      @id @default(autoincrement())
  nome       String
  descricao  String
  prodIMG    String
  modelo     String
  criacao    DateTime @default(now())
  IDProdutos nota[]
}

model nota {
  id         Int      @id @default(autoincrement())
  emissao    DateTime @default(now())
  vencimento DateTime
  devolucao  DateTime
  IDUsuario  Int
  IDAluguel  Int
  IDProduto  Int
  ProdutoID  produtos @relation(fields: [IDProduto], references: [id])
  AluguelID  aluguel  @relation(fields: [IDAluguel], references: [id])
  UsuarioID  usuario  @relation(fields: [IDUsuario], references: [id])
}
